<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="114dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ano Lancamento"
        app:layout_constraintStart_toStartOf="@+id/textViewTituloFilme"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnoLancamento" />

    <TextView
        android:id="@+id/textViewTituloFilme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TituloFilme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAnoLancamento"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_marginTop="56dp"
        android:text="AnoLancamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloFilme" />

    <TextView
        android:id="@+id/textViewEstiloDoGenero"
        android:layout_width="125dp"
        android:layout_height="22dp"
        android:layout_marginTop="64dp"
        android:text="GeneroFilme"
        app:layout_constraintStart_toStartOf="@+id/textViewAnoLancamento"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnoLancamento" />

    <TextView
        android:id="@+id/textViewDiretorFilme"
        android:layout_width="159dp"
        android:layout_height="21dp"
        android:layout_marginTop="72dp"
        android:text="DiretorFilme"
        app:layout_constraintStart_toStartOf="@+id/textViewEstiloDoGenero"
        app:layout_constraintTop_toBottomOf="@+id/textViewEstiloDoGenero" />

    <TextView
        android:id="@+id/textViewFilmeAssistido"
        android:layout_width="107dp"
        android:layout_height="20dp"
        android:layout_marginTop="76dp"
        android:text="FilmeAssistido"
        app:layout_constraintStart_toStartOf="@+id/textViewDiretorFilme"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiretorFilme" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="435dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Titulo Filme"
        app:layout_constraintStart_toStartOf="@+id/textViewTituloFilme"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloFilme" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Genero Filme"
        app:layout_constraintStart_toStartOf="@+id/textViewEstiloDoGenero"
        app:layout_constraintTop_toBottomOf="@+id/textViewEstiloDoGenero" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Diretor Filme"
        app:layout_constraintStart_toStartOf="@+id/textViewDiretorFilme"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiretorFilme" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Filme Assistido"
        app:layout_constraintStart_toStartOf="@+id/textViewFilmeAssistido"
        app:layout_constraintTop_toBottomOf="@+id/textViewFilmeAssistido" />

    <Button
        android:id="@+id/buttonVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:text="Voltar"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5" />

    <Button
        android:id="@+id/buttonNovoCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="NovoCadastro"
        app:backgroundTint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.742"
        app:layout_constraintStart_toEndOf="@+id/buttonVoltar"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5" />

</androidx.constraintlayout.widget.ConstraintLayout>